generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("APP_PG_DATABASE_URL")
}

model Game {
  id          String   @id @default(uuid())
  title       String
  developer   String
  releaseYear Int?
  genre       String   @default("Unknown")
  price       Float    @default(0.0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}